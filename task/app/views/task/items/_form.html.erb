<%= form_with(url: items_path(item.id), local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Name:
    <%= form.text_field :name %>
  </div>

  <div class="field">
    Status:
    <%= form.number_field :status %>
  </div>
  <div class="field">
    Label:
    <%= form.collection_select :label_ids, @labels, :id, :name, { include_blank: false }, { multiple: true } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
